.banner-slider
  .banner-wrap
    .carousel
      .slider#banner_slider
        #slide1.slide
          .inner
            .img.background-banner
              |
              |
              img.img-2d3d(
                src=img_assets+img_artwork[5]
                data-2d=img_assets+img_artwork[4]
                data-3d=img_assets+img_artwork[5]
                alt='background'
              )/
              |
              |
            .container
              .row
                .col-md-6.px-3.d-flex.align-center
                  .text
                    h4.use-text-title2
                      | #{$t.saas_landing.banner_title + ' '}
                      | #{$t.saas_landing.banner_titlestrong}
                    h5.use-text-subtitle2 #{$t.saas_landing.banner_subtitle}
                    .btn-area
                      |
                      |
                      a.btn.waves-effect.btn-flat.btn-large.button.primary-text(href='#')
                        | #{$t.common.btn_detail}
                      |
                      |
                      a.btn.waves-effect.button.btn-large.secondary(href=link.saas.register)
                        | #{$t.common.btn_get}
                      |
                      |
                .col-md-6.px-6
                  .img
                    .oval-floor.slide1
                    |
                    |
                    img.img-2d3d.img-slide1(
                      src=img_assets+img_artwork[1]
                      data-2d=img_assets+img_artwork[0]
                      data-3d=img_assets+img_artwork[1]
                      alt='banner 1 3D'
                    )/
                    |
                    |
        #slide2.slide
          .inner
            .img.background-banner.mobile
              |
              |
              img.img-2d3d(
                src=img_assets+img_artwork[5]
                data-2d=img_assets+img_artwork[4]
                data-3d=img_assets+img_artwork[5]
                alt='background'
              )/
              |
              |
            .container
              .row
                .col-md-6.px-3.d-flex.align-center.order-md-last
                  .text
                    h4.use-text-title2
                      | #{$t.saas_landing.banner_title + ' '}
                      | #{$t.saas_landing.banner_titlestrong}
                    h5.use-text-subtitle2 #{$t.saas_landing.banner_subtitle}
                    .btn-area
                      |
                      |
                      a.btn.waves-effect.btn-flat.btn-large.button.primary-text(href='#')
                        | #{$t.common.btn_detail}
                      |
                      |
                      a.btn.waves-effect.button.btn-large.secondary(href=link.saas.register)
                        | #{$t.common.btn_get}
                      |
                      |
                .col-md-6.px-6.order-md-first
                  .img
                    .oval-floor.slide2
                    |
                    |
                    img.img-2d3d.img-slide2(
                      src=img_assets+img_artwork[3]
                      data-2d=img_assets+img_artwork[2]
                      data-3d=img_assets+img_artwork[3]
                      alt='banner 2 3D'
                    )/
                    |
                    |
        #slide3.slide.center-content
          .inner
            .container
              .row.justify-content-center
                .col-xs-12.px-sm-12.px-6
                  .text.text-center
                    h4.use-text-title2
                      | #{$t.saas_landing.banner_title + ' '}
                      | #{$t.saas_landing.banner_titlestrong}
                    h5.use-text-subtitle2 #{$t.saas_landing.banner_subtitle}
                    .btn-area
                      |
                      |
                      a.btn.waves-effect.btn-flat.btn-large.button.primary-text(href='#')
                        | #{$t.common.btn_detail}
                      |
                      |
                      a.btn.waves-effect.button.btn-large.secondary(href=link.saas.register)
                        | #{$t.common.btn_get}
                      |
                      |
                .col-xs-12
                  .img.h-banner
                    .oval-floor.slide3
                    |
                    |
                    img.img-2d3d(
                      src=img_assets+img_artwork[7]
                      data-2d=img_assets+img_artwork[6]
                      data-3d=img_assets+img_artwork[7]
                      alt='banner 3 3D'
                    )/
                    |
                    |
    .slide-nav-group
      .deco-wrap
        .deco.bottom
          |
          |
          svg.wave
            include ../svg/deco-wave.pug
          |
          |
        .deco.top
          |
          |
          svg.wave
            include ../svg/deco-wave.pug
          |
          |
      .wave.wave-cover
      .hidden-sm-down
        .container
          nav.slide-nav#banner_nav
            |
            |
            a.waves-effect.active(data-slide='0')
              strong First Slide
              | Banner with left text and right image
            |
            |
            hr.divider
            |
            |
            a.waves-effect(data-slide='1')
              strong Second Slide
              | Banner with left image and right text
            |
            |
            hr.divider
            |
            |
            a.waves-effect(data-slide='2')
              strong Third Slide
              | Banner with center text and image
            |
