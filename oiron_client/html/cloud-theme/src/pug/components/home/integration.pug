.root
  .container
    .row
      .dashed-divider
      .col-md-6.px-sm-10.mb-10.mb-md-0
        .wow.fadeInDownShort(data-wow-delay="0.5s" data-wow-duration="0.5s")
          div
            figure.illustration
              |
              |
              svg.droplet.secondary-color(width="7px" height="128px" viewBox="0 0 7 128" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink")
                include ../svg/droplet
              |
              |
              img.img-2d3d(
                src=img_assets+img_artwork[21]
                data-2d=img_assets+img_artwork[20]
                data-3d=img_assets+img_artwork[21]
                alt='background'
              )/
              |
              |
            +title-main('center', $t.cloud_landing.mainfeature_titleitem2, $t.cloud_landing.mainfeature_titleitem1)
      .col-md-6.px-sm-10
        .wow.fadeInDownShort(data-wow-delay="0.8s" data-wow-duration="0.5s")
          div
            figure.illustration
              |
              |
              svg.droplet.primary-color(width="7px" height="128px" viewBox="0 0 7 128" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink")
                include ../svg/droplet
              |
              |
              img.img-2d3d(
                src=img_assets+img_artwork[23]
                data-2d=img_assets+img_artwork[22]
                data-3d=img_assets+img_artwork[23]
                alt='background'
              )/
              |
              |
            +title-main('center', $t.cloud_landing.morefeature_headtitle2, $t.cloud_landing.benefit_title)
  .container
    .timeline
      .solid-divider
      .row
        .col-sm-6.py-0.px-md-10
          ul.left-side
            each item, index in integration1
              li(class="type-" + item.color)
                .wow.fadeInRightShort(data-wow-offset="-100" data-wow-delay=(0.2 + (0.1 * index)) + "s" data-wow-duration="0.5s")
                  .item
                    .text
                      strong.use-text-subtitle2 #{item.title}
                      p #{item.subtitle}
                    .icon
                      |
                      |
                      i(class=item.icon)
                      |
                      |
        .col-sm-6.py-0.px-md-10
          ul.right-side
            each item, index in integration2
              li(class="type-" + item.color)
                .wow.fadeInLeftShort(data-wow-offset="-100" data-wow-delay=(0.2 + (0.2 * index)) + "s" data-wow-duration="0.5s")
                  .item
                    .icon
                      i(class=item.icon)
                    .text
                      strong.use-text-subtitle2 #{item.title}
                      p #{item.subtitle}
