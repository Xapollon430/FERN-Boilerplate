      each item in testiContent
        .item
          +testimonial-card(item.avatar, item.title, item.name, item.text, item.rating)
      .item.show-lg-up
        .item-props-last
  .floating-artwork
    .container.fixed-width
      .artwork
        +slider-art('testimonials')
          .wow.fadeInLeftShort(data-wow-offset='100' data-wow-delay='0.3s' data-wow-duration='0.5s')
            |
            |
            img.img-2d3d(
              src=img_assets+img_artwork[25]
              data-2d=img_assets+img_artwork[24]
              data-3d=img_assets+img_artwork[25]
              alt='services 3d'
