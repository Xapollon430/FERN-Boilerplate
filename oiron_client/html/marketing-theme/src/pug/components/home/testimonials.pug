.root
  .container.carousel-header
    .px-3
      h4.use-text-title2.text-capitalize
        | #{$t.marketing_landing.testimonial_title}
      p.use-text-subtitle2 They are doing great things with us.
  .carousel
    .slick-carousel#testimonial_carousel(data-length=testiContent.length)
      each item in testiContent
        .item
          +testimonial-card(item.avatar, item.title, item.name, item.text, item.rating)
      .item.show-lg-up
        .item-props-last
  .floating-artwork
    .container.fixed-width
      .artwork
        +slider-art('testimonials')
          div
            .wow.fadeIn(data-wow-ffset='0' data-wow-delay='0' data-wow-duration='0.5s')
              include ./deco/room
            .wow.fadeInLeftShort(data-wow-ffset='-60' data-wow-delay='0.3s' data-wow-duration='0.5s')
              |
              |
              img.img-2d3d(
                src=img_assets+img_artwork[17]
                data-2d=img_assets+img_artwork[16]
                data-3d=img_assets+img_artwork[17]
                alt='services 3d'
              )/
              |
              |
