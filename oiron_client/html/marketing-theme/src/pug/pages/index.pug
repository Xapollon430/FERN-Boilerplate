  div#home
    .main-wrap
      include ../components/header/main.pug
      |
      |
      |
      main.container-wrap
        // ##### BANNER #####
        section#banner
          include ../components/home/banner-slider.pug
        // ##### END BANNER #####
        |
        |
        |
        // ##### ABOUT #####
        section#about.space-top.space-top-short-sm
          include ../components/home/about.pug
        // ##### END ABOUT #####
        |
        |
        |
        // ##### SERVICES #####
        section#services.space-top.space-top-short-sm
          include ../components/home/services.pug
        // ##### END SERVICES #####
        |
        |
        |
        // ##### OUR EXPERTISE #####
        section#our-expertise.space-top-short
          include ../components/home/our-expertise.pug
        // ##### END OUR EXPERTISE #####
        |
        |
        |
        // ##### COMPANY LOGO #####
        section#company.space-top.space-bottom-short
          include ../components/company-logo.pug
        // ##### END COMPANY LOGO #####
        |
        |
        |
        // ##### CASE STUDIES #####
        section#case-studies
          include ../components/home/case-studies.pug
        // ##### END CASE STUDIES #####
        |
        |
        |
        // ##### TESTIMONIALS #####
        section#testimonials.space-top-short
          include ../components/home/testimonials.pug
        // ##### END TESTIMONIALS #####
        |
        |
        |
        // ##### CALL ACTION #####
        section.space-bottom-short
          include ../components/call-action.pug
        // ##### END CALL ACTION #####
        |
        |
        |
      // ##### FOOTER #####
      include ../components/footer/main.pug
      // ##### END FOOTER #####
      |
      |
      |
      // ##### NOTIFICATIONS #####
      .hidden-md-down
        include ../components/notifications.pug
      // ##### END NOTIFICATIONS #####
      |
      |
      |
      // ##### CORNER #####
      .hidden-md-down
        include ../components/corner.pug
