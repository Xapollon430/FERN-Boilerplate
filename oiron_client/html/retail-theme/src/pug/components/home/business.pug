    },
    {
      icon: 'ion-ios-wineglass',
      name: 'cafe',
      type: 'small',
      color: 'accent',
      rotate: 120,
      x: 580,
      y: 100
    },
    {
      icon: 'ion-coffee',
      name: 'cofeshop',
      type: 'small',
      color: 'primary',
      rotate: -60,
      x: 720,
      y: 10
    },
    {
      icon: 'ion-ios-cart',
      name: 'retail',
      type: 'large',
      color: 'secondary',
      rotate: 0,
      x: 873,
      y: 0
    }
  ]
  
.container.fixed-width.root
  +title-main("center")
    | #{$t.retail_landing.business_title}
  p.use-text-subtitle2.text-center.px-15
    | #{$t.retail_landing.business_desc}
  .circle-group
    each item, index in businessData
      div
        .wow.zoomInShort(data-wow-offset="50" data-wow-delay=(0.2 * index) + "s" data-wow-duration="0.5s")
          .circle(
            class='fill-'+item.color + ' ' + item.type
            style="top:" + item.y + "px;" + "left:" + item.x + "px"
          )
            |
            |
            svg(style="transform: rotate(" + item.rotate + "deg)")
              if (item.type === 'large')
                include ../svg/circle-large.pug
              else if (item.type === 'medium')
                include ../svg/circle-medium.pug
              else
                include ../svg/circle-small.pug
            |
            |
            a.paper.waves-effect(href="javascipt:void(0)")
              |
              |
              i(class=item.icon)
              |
              |
              h6
                | #{item.name}
            |
            |
