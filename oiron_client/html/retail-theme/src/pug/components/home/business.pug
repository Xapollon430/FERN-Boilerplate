    {
      icon: 'ion-scissors',
      name: 'barbershop',
      type: 'medium',
      color: 'secondary',
      rotate: 0,
      x: 320,
      y: 10
    },
    {
      icon: 'ion-tshirt',
      name: 'clothing',
      type: 'medium',
      color: 'accent',
      rotate: 180,
      x: 40,
      y: 315
    },
    {
      icon: 'ion-android-home',
      name: 'minimarket',
      type: 'small',
      color: 'secondary',
      rotate: 180,
      x: 275,
      y: 295
    },
    {
      icon: 'ion-android-restaurant',
      name: 'restaurant',
